.backgourd-img {
  width: 100%;
  height: 275rpx;
}
.station-content {
  text-align: center;
  background-color: #fff;
}
.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  box-shadow: 0 0 300rpx 100rpx rgba(255, 255, 255, .2), 0 1px 0 rgba(255, 255, 255, 0.4);
  margin-top: -100rpx;
}

.station-name {
  display:block;
  font-size:1rem;
}
.station-address {
  display:block;
  font-size:0.5rem;
  color:#aaa;
}
.radio-group {
  border-top: #aaa .02rem solid;
  margin: 20rpx 0;
}
.pay-radio-view {
  padding: 20rpx 20rpx;
  border-bottom: #aaa .02rem solid;
  height: 50rpx;
}
.label-radio {
  float: left;
  font-size: 1rem;
}
.account {
  font-size: 0.8rem;
  color: #aaa;
  margin-left: 20rpx;
}
.weui-icon-radio {
  float: right;
}


