<map id="map" 
  longitude="{{info.lon}}" 
  latitude="{{info.lat}}" 
  scale="14" 
  controls="{{controls}}" 
  bindcontroltap="controltap" 
  markers="{{markers}}" 
  bindmarkertap="markertap" 
  polyline="{{polyline}}" 
  circles="{{circles}}" 
  bindregionchange="regionchange" 
  show-location 
  style="width: 100%; height: 500px;">
</map>
<view class='mainView'>
  <div class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
      <view class="weui-media-box__title">
        <p>{{info.name}}</p>
        <span class="weui-media-box__desc distance">距您{{info.distance}}公里</span>
      </view>
      
      <view class="weui-media-box__desc ">
        <span class="address">{{info.address}}</span>
        <span class="pull-right">
        <button class="weui-btn mini-btn" type="primary" size="mini" bindtap="goThere">到这去</button>
        </span>
        
      </view>
      <view class="weui-media-box__desc price">
      柴油价格：{{info.price}}元</view>
    </view>
  </div>
</view>




